
<div class="mt-4">
    <div class="row">
         {{#each course}}
        <div class="col-sm-6 col-lg-3" style=" margin-left: 1rem; padding-right: 0; box-sizing: content-box;">
           
            <div class="card">
  <img class="card-img-top" src={{image}} alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.description}}</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
  
</div>

        </div>
        {{/each}}
    </div>
</div>