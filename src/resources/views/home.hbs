
<div class="mt-4">
    <div class="row">
         {{#each course}}
      <div class="col-sm-6 col-lg-3">
      <div class="card">
         <a href="/course/{{this._id}}">
         <img class="card-img-top" src={{this.image}} alt="Card image cap">
         </a>
      <div class="card-body">
    <a href="/course/{{this._id}}"><h5 class="card-title">{{this.name}}</h5></a>
    <p class="card-text">{{this.description}}</p>
   <a href="/course/{{this._id}}" class="btn btn-primary">Detail</a>
      </div>
  
</div>

      </div>
        {{/each}}
    </div>
</div>